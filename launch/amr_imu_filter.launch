<launch>
    <node name="amr_imu_filter" pkg="amr_imu_filters" type="amr_imu_filter" output="screen">
        <remap from="imu" to="/imu"/>
        <remap from="imu_filtered" to="/imu_filtered"/>
    </node>

    <!-- Optional: Launch rqt_reconfigure -->
    <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure" output="screen" />
</launch>